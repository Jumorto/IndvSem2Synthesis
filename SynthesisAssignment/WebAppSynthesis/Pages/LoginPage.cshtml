@page
@model WebAppSynthesis.Pages.Shared.LoginPageModel
@{
}

@section scripts{
    <partial name="_ValidationScriptsPartial" />
}

<div class="container">
    <div class="card-header align-content-center">
        <div class="card-columns" style="text-align:left">
            <b> Login</b>
        </div>
    </div>


    <div class="card-body">
        <div class="d-flex flex-column">
            <form method="post">
                <div class="p-2">
                    <p><b>Email*</b></p>
                    <input   asp-for="model => @Model.email" value="@Model.email" autofocus />
                    <span  class="alert-warning" asp-validation-for="model => @Model.email"></span>
                </div>
                <div class="p-2">
                    <p><b>Password*</b></p>
                    <input  asp-for="model => @Model.password" value="@Model.password" />
                    <span  class="alert-warning" asp-validation-for="model => @Model.password"></span>
                </div>
                <div class="p-2">
                    <button class="btn-success" asp-page-handler="Login">
                        Login
                    </button>
                </div>
                <div class="p-8">
                    <p>@Model.Message</p>
                </div>
            </form>
        </div>
    </div>
    <div class="card-footer">
        <div class="containar">
            <div>
                <form method="post" asp-page-handler="Register">
                    <p><b>No account? Register here</b></p>
                    <button class="btn-info">
                        Click here to register
                    </button>
                </form>
            </div>
        </div>
    </div>
 </div>