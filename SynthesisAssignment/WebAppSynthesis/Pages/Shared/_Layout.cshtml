<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - WebAppSynthesis</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
    <link rel="stylesheet" href="~/css/style.css" />
    <link rel="stylesheet" href="~/css/menu.css" />
</head>
<body>
    <div>
        <div class="header">
            <button class="openbtn" style="float: left" onclick="openNav()">&#9776;</button>
            <h2><b>DuеlSys</b></h2>
            @if (ViewData["CurrentEmail"] != null)
            {
                <div class="c8">
                    <p><b>Current user: @ViewData["CurrentEmail"]</b></p>
                </div>
            }
        </div>

        <div class="sidebar" id="menuSidebar">
            <a asp-page="/Index">   <p>Home</p> </a>
            @if (ViewData["CurrentEmail"] == null)
            {
                <a asp-page="/LoginPage">  <p>Login</p></a>
            }
            else
            {
                <a asp-page="/AccountDetails">  <p>Account Details</p></a>
               
                <a asp-page="/PlayerProfile">   <p>Player Profile</p></a>

                <a href="/Index?param=1"> <p>Logout</p></a>
            }
            <a href="javascript:void(0)" class="closebtn" style="float: left" onclick="closeNav()">&times;</a>
        </div>

        <div class="main" id="main">
            <main role="main">
                @RenderBody()
            </main>
        </div>
    </div>    

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)
</body>
</html>
